// This program will generate a random month

public class RandomMonthDBH 
{	
       public static void main(String[] args) 
       { 
       
       int monthNum = (int)(Math.random() * 12 + 1);
        
        switch (monthNum)
        {
        case 1: System.out.print("January is month number " + monthNum + ".");
            break;
        case 2: System.out.print("Febuary is month number " + monthNum + ".");
            break; 
        case 3: System.out.print("March is month number " + monthNum + ".");
            break; 
        case 4: System.out.print("April is month number " + monthNum + ".");
            break; 
        case 5: System.out.print("May is month number " + monthNum + ".");
            break; 
        case 6: System.out.print("June is month number " + monthNum + ".");
            break; 
        case 7: System.out.print("July is month number " + monthNum + ".");
            break;
        case 8: System.out.print("August is month number " + monthNum + ".");
            break; 
        case 9: System.out.print("September is month number " + monthNum + ".");
            break; 
        case 10: System.out.print("October is month number " + monthNum + ".");
            break; 
        case 11: System.out.print("November is month number " + monthNum + ".");
            break; 
        case 12: System.out.print("December is month number " + monthNum + ".");
            break;
        default: System.out.print("invalid input");
        }
       }
}
